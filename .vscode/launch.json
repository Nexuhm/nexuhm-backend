{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Core",
      "runtimeArgs": ["start", "core", "--debug", "--watch"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nest",
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "!**/node_modules/**"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Background Tasks",
      "runtimeArgs": ["start", "bg-tasks", "--debug", "--watch"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nest",
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "!**/node_modules/**"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ]
}
